<% content_for :title do %>
  <%= current_article.title %>
<% end %>

<% content_for :keywords do %>
  <%= current_article.tags %>
<% end %>

<% content_for :participants do %>
  <li class="guest clock7">
    <a href="<%= author(current_article.data["guests"].first).link %>">
      <img src="/images/<%= author(current_article.data["guests"].first).avatar %>"/>
    </a>
  </li>
  <li class="host clock6">
    <a href="<%= author(current_article.data["host"]).link %>">
      <img src="/images/<%= author(current_article.data["host"]).avatar %>"/>
    </a>
  </li>
  <% current_article.data["guests"][1..-1].each_with_index do |guest, i| %>
  <li class="guest clock<%= 5 - i %>">
    <a href="<%= author(guest).link %>">
      <img src="/images/<%= author(guest).avatar %>"/>
    </a>
  </li>
  <% end %>
<% end %>

<% content_for :nav do %>
  <ul class="page-nav">
    <li><%= prev_nav(current_article.previous_article) %></li>
    <li><%= next_nav(current_article.next_article) %></li>
  </ul>
<% end %>

<% wrap_layout :layout do %>
  <article class="post">
    <audio controls name="media" class="player">
      <source src="<%= current_article.data["mp3_link"] %>" type="audio/mpeg">
    </audio>
    
    <ul class="actions">
      <li><a href="<%= current_article.data["mp3_link"] %>"><i class="icon-download"></i></a></li>
      <li><a href=""><i class="icon-share"></i></a></li>
    </ul>
    
    <h2 class="title"><%= current_article.title %></h2>

    <dl>
      <dt>Host:</dt><dd> <%= current_article.data["host"] %></dd>
      <dt>Guests:</dt><dd> <%= current_article.data["guests"].join(", ") %></dd>
      <dt>Topic:</dt><dd> <%= current_article.tags.join(", ") %></dd>
    </dl>

    <h4>Show Notes:</h4>
    <div>
      <%= yield %>
    </div>

