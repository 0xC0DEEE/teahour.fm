---
pageable: false
per_page: 10
---

<% article = page_articles.first %>

<% content_for :participants do %>
  <li class="guest clock7">
    <a href="<%= author(article.data["guests"].first).link %>">
      <img src="/images/<%= author(article.data["guests"].first).avatar %>"/>
    </a>
  </li>
  <li class="host clock6">
    <a href="<%= author(article.data["host"]).link %>">
      <img src="/images/<%= author(article.data["host"]).avatar %>"/>
    </a>
  </li>
  <% article.data["guests"][1..-1].each_with_index do |guest, i| %>
  <li class="guest clock<%= 5 - i %>">
    <a href="<%= author(guest).link %>">
      <img src="/images/<%= author(guest).avatar %>"/>
    </a>
  </li>
  <% end %>
<% end %>

<% content_for :nav do %>
  <ul class="page-nav">
    <li><%= prev_nav(article.previous_article) %></li>
    <li><%= next_nav(article.next_article) %></li>
  </ul>
<% end %>

<% page_articles[0..0].each_with_index do |article, i| %>
  <article class="post">
    <audio controls name="media" class="player">
      <source src="<%= article.data["mp3_link"] %>" type="audio/mpeg">
    </audio>

    <ul class="actions">
      <li><a href="<%= article.data["mp3_link"] %>"><i class="icon-download"></i></a></li>
      <li><a href=""><i class="icon-share"></i></a></li>
    </ul>

    <h2 class="title"><%= link_to "##{article.data['idx']} #{article.title}", article %></h2>

    <dl>
      <dt>Host:</dt><dd> <%= author(article.data["host"]).name %></dd>
      <dt>Guests:</dt><dd> <%= article.data["guests"].map { |guest| author(guest).name }.join(", ") %></dd>
      <dt>Topic:</dt><dd> <%= article.tags.join(", ") %></dd>
    </dl>

    <h4>Show Notes:</h4>
    <div>
      <%= article.body %>
    </div>
  </article>
<% end %>

